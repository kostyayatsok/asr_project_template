{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [],
    "spectrogram": [
      {
        "type": "FrequencyMasking",
        "args": {
          "freq_mask_param" : 15
        }
      },
      {
        "type": "TimeMasking",
        "args": {
          "time_mask_param" : 35
        }
      }
    ]
  },
  "arch": {
    "type": "JasperModel",
    "args": {
      "n_feats": 128
    }
  },
  "data": {
    "train": {
      "batch_size": 32,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 16.7,
            "max_text_length": 300,
            "limit" : 32
          }
        }
      ]
    },
    "val": {
      "batch_size": 8,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 16.7,
            "max_text_length": 300
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 0.01,
      "momentum" : 0.98,
      "weight_decay": 0.001
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "Metrics/WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "Metrics/CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size" : 20,
      "gamma": 0.981
    }
  },
  "trainer": {
    "epochs": 440,
    "len_epoch":20,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "visualize": "wandb",
    "wandb_project": "asr_project"
  }
}
