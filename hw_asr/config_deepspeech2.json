{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
        "n_mels": 128
      }
    }
  },
  "augmentations": {
    "wave": [],
    "spectrogram": [
      {
        "type": "FrequencyMasking",
        "args": {
          "freq_mask_param" : 20
        }
      },
      {
        "type": "TimeMasking",
        "args": {
          "time_mask_param" : 75
        }
      }
    ]
  },
  "arch": {
    "type": "DeepSpeech2Model",
    "args": {
      "n_feats": 128
    }
  },
  "data": {
    "train": {
      "batch_size": 32,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 16.7,
            "max_text_length": 300
          }
        }
      ]
    },
    "val": {
      "batch_size": 32,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 16.7,
            "max_text_length": 300,
            "limit": 960
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 5e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "Metrics/WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "Metrics/CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "max_lr": 5e-4, 
      "steps_per_epoch": 880,
      "epochs": 50,
      "anneal_strategy": "linear"
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "visualize": "wandb",
    "wandb_project": "asr_project"
  }
}
